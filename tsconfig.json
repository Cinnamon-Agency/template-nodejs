{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "typeRoots": ["node_modules/@types", "types"]
  },
  "include": ["src/**/*.ts", "src/app..ts"]
}