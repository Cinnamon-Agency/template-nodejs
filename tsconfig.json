{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "build",
    "target": "ES2022",
    "lib": ["ES2023"],
    "module": "commonjs",
    "strict": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "inlineSourceMap": true,
    "typeRoots": ["node_modules/@types", "types"],
    "baseUrl": "src",
    "paths": {
      "@api/*": ["api/*"],
      "@app": ["core/app"],
      "@common": ["common"],
      "@common/*": ["common/*"],
      "@config": ["config"],
      "@core/*": ["core/*"],
      "@documentation": ["documentation"],
      "@generated/*": ["generated/*"],
      "@logger": ["logger"],
      "@middleware/*": ["middleware/*"],
      "@models": ["models"],
      "@routes": ["routes"],
      "@services/*": ["services/*"]
    }
  },
  "include": ["src/**/*.ts", "src/app.ts"]
}
